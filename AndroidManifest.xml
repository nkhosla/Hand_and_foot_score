<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nkhosla.hand.and.foot.score.keeper"
    android:versionCode="2"
    android:versionName="1.1a" >

    <uses-sdk
        android:minSdkVersion="13"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RoundOne"
            android:label="@string/title_activity_round_one" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nkhosla.hand.and.foot.score.keeper.MainActivity" />
        </activity>
        <activity
            android:name=".RoundTwo"
            android:label="@string/title_activity_round_two" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nkhosla.hand.and.foot.score.keeper.MainActivity" />
        </activity>
        <activity
            android:name=".RoundThree"
            android:label="@string/title_activity_round_three" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nkhosla.hand.and.foot.score.keeper.MainActivity" />
        </activity>
        <activity
            android:name=".RoundFour"
            android:label="@string/title_activity_round_four" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nkhosla.hand.and.foot.score.keeper.MainActivity" />
        </activity>
        <activity
            android:name=".FinalScores"
            android:label="@string/title_activity_final_scores" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nkhosla.hand.and.foot.score.keeper.MainActivity" />
        </activity>
    </application>

</manifest>